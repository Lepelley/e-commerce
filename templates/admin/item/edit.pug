extends ../../layout.pug

block content
  h1 Editer l'article #{item.name}

  form(method='post')
    p.form-group
      label(for='form-name') Nom de l'article
      input#form-name.form-control(type='text' name='form_name' value=item.name required)
    p.form-group
      label(for='form-price') Prix
      input#form-price.form-control(type='number' name='form_price' value=item.price required)
    p.form-group
      label(for='form-image') Image
      input#form-image.form-control(type='url' name='form_image' value=item.image required)
    p.form-group
      label(for='form-description') Description
      textarea#form-description.form-control(name='form_description' required) #{item.description}

    p
      button.btn.btn-primary(type='submit') Modifier

  p
    a(href='/admin/list') Revenir Ã  la liste des articles
